@model imow.AdminEtl.Models.OrderModel
<div class="order-warp">
    <div class="panel panel-default">
        <div class="panel-body">
            <form class="form-horizontal orderForm" role="form"  name="orderForm" action="@Url.Action("Order","Index")">
                <div class="form-group">
                    <div class="col-sm-12 text-center">
                        <h4><b>免费试听课程</b></h4>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-4 control-label">您的姓名</label>
                    <div class="col-sm-8">
                        <input type="text" class="form-control" name="Name" placeholder="您的姓名" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-4 control-label">联系电话</label>
                    <div class="col-sm-8">
                        <input type="text" class="form-control" name="Tel" placeholder="联系电话" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-4 control-label">校区</label>
                    <div class="col-sm-8">
                        <select class="form-control" name="SchoolId">
                            @foreach (var item in Model.SchoolList)
                            {
                                <option value="@item.Id">@item.Name</option>
                            }
                        </select>
                        <input type="hidden" name="Source" class="order_source" value="" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-4 control-label">预约课程</label>
                    <div class="col-sm-8">
                        <select class="form-control" name="ClassId">
                            @foreach (var item in Model.ClassList)
                            {
                                <option value="@item.Id">@item.Name</option>
                            }
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-4 control-label">留言</label>
                    <div class="col-sm-8">
                        <textarea class="form-control" name="Msg"></textarea>
                    </div>
                </div>
                <div class="form-group text-center">
                    <button type="button" class="btn btn btn-w-m btn-danger btnOrder">提交</button>
                </div>
            </form>
        </div>
    </div>
</div>