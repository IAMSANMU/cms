@model imow.AdminEtl.Models.NewsModel
@{
    Layout = "~/Views/Shared/Front/_FLayout.cshtml";
}
<!-- //banner -->
<div class="section">
</div>



<div class="container news ">
    <div class="row clearfix">
        <div class="col-sm-8">
            <div class="row clearfix">
                <div class="col-sm-12">
                        <H2 class="title">
                            <strong> 新闻活动</strong>
                            <small>News</small>
                        </H2>
                    </div>
            </div>
            @foreach (var item in Model.NewsList)
            {
                var tagList = item.Tags.Split(',');
                <div class="row clearfix">
                    <div class="col-sm-12">
                        <dl>
                            <dt>
                                <span class="pull-right">@item.CreateTime.ToShortDateString()</span>
                                @if (item.Type == 0)
                                {
                                    <a target="_blank" href="@Url.Action("Info", "News", new {id = item.Id})">
                                        @item.Title
                                    </a>
                                }
                                else
                                {
                                    <a target="_blank" href="@item.Link">
                                        @item.Title
                                    </a>
                                }
                            </dt>
                            <dd>
                                @item.Description
                            </dd>
                            <dd class="newstag">
                                <b>标签：</b>
                                @foreach (var tag in tagList)
                                {
                                <span class="label label-default">@tag</span>
                                }
                            </dd>
                        </dl>
                    </div>
                </div>
            }

            <div class="row clearfix">
                <div class="col-sm-12 text-center">
                    @Html.Partial("Page", Model.Page)
                </div>
            </div>
        </div>
        <div class="col-sm-4">
            @Html.Action("Top", "News")
            @Html.Action("Order", "Index")
        </div>
    </div>


</div>

@section Styles {
    <link rel='stylesheet' type='text/css' href="~/Content/front/news.css" />

}


@section Scripts {
}
