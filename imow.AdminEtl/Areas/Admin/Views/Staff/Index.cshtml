@model  imow.AdminEtl.Areas.Admin.Models.Admin.StaffModel
@{
    Layout = "~/Views/Shared/_Main.cshtml";
    ViewBag.Tabs = new string[] { "员工列表_list", "回收站_recover" };
}

@section searchBar
{
    <form role="form" class="form-inline">
        <div class="form-group">
            <input type="text" name="CName" value="" placeholder="名称" class="form-control" searchcolum="CName" searchoperator="6">
            <input type="hidden" name="IsDel" value="@(ViewBag.tab.ToString()=="list"?0:1)" placeholder="" class="form-control" searchcolum="IsDel" searchoperator="1" startSearch="true">
        </div>
        <div class="form-group">
            <button type="button" class="btn btn-w-m btn-primary ladda-button" id="search" data-style="expand-right"><span class="ladda-label">搜索</span><span class="ladda-spinner"></span></button>
        </div>
    </form>

}

@section toolbar{
    <div class="ibox-content" id="tbBars"></div>
}

@section table{
    <table class="table table-striped table-bordered table-hover" id="tbList">
        <thead>
            <tr>
                <th><input type="checkbox" class="i-checks checkAll" data-table="tbList" /></th>
                <th>操作</th>
                <th>中文姓名</th>
                <th>英文姓名</th>
                <th>电话</th>
                <th>籍贯</th>
                <th>校区</th>
                <th>是否推荐</th>
                <th>创建时间</th>
            </tr>
        </thead>
    </table>
}
@section Scripts{

    @Scripts.Render("~/Areas/Admin/Scripts/staff/index.js")
}