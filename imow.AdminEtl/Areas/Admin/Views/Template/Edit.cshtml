@model imow.Model.EntityModel.Admin.TemplateEntity
@{
    Layout = "~/Views/Shared/_EmptyLayout.cshtml";
}
<div class="wrapper wrapper-content animated fadeInRight ecommerce">
    <div class="row">

        <div class="col-sm-12 ibox">
            <div class="ibox-content">
                <form role="form" id="saveForm" class="form-horizontal" method="post" action="@Url.Action("Modify", "Template")">
                    <div class="form-group">
                        <input type="hidden" name="Id" value="@Model.Id" />
                        <label class="col-sm-2 control-label">模板名称:</label>
                        <div class="col-sm-8">
                            <input type="text" name="Name" value="@Model.Name" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">详情:</label>
                        <div class="col-sm-8">
                            <textarea name="DecodeContext" id="info" class="form-control summernote">@Model.DecodeContext</textarea>
                        </div>
                    </div>
                    <div class="form-group text-center">
                        <div class="col-sm-12">
                            <button type="button" class="btn btn-w-m btn-primary ladda-button" id="btnSave" data-style="expand-right">保存</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


@section Styles {
    @Styles.Render("~/plugins/summernoteStyles")

}


@section Scripts {
    @Scripts.Render("~/plugins/validate")
    @Scripts.Render("~/plugins/summernote")
    @Scripts.Render("~/Areas/Admin/Scripts/template/edit.js")
}