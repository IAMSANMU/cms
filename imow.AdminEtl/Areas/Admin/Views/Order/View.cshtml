@model imow.Model.EntityModel.Admin.OrderEntity
@{
    Layout = "~/Views/Shared/_EmptyLayout.cshtml";
}



<div class="wrapper wrapper-content animated fadeInRight ecommerce">
    <div class="row">
        <div class="col-sm-12 ibox">
            <div class="ibox-content">
                <form role="form" id="saveForm" class="form-horizontal" method="post" action="@Url.Action("Update","Module")">
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label class="col-sm-4 control-label">预约人:</label>
                            <div class="col-sm-6  form-control-static">
                                @Model.Name
                                <!-- 占位 -->
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-4 control-label">预约人电话:</label>
                            <div class="col-sm-6 form-control-static">
                                @Model.Tel
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-4 control-label">预约校区:</label>
                            <div class="col-sm-6 form-control-static">
                                @Model.SchoolEntity.Name
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-4 control-label">预约课程:</label>
                            <div class="col-sm-6 form-control-static">
                                @Model.ClassEntity.Name
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-4 control-label">预约时间:</label>
                            <div class="col-sm-6 form-control-static">
                                @Model.CreateTime
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label class="col-sm-4 control-label">留言:</label>
                            <div class="col-sm-6 form-control-static">
                                @Model.Msg
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-4 control-label">状态:</label>
                            <div class="col-sm-6 form-control-static">
                                @Model.StatusStr
                            </div>
                        </div>
                    
                        <div class="form-group">
                            <label class="col-sm-4 control-label">回访时间:</label>
                            <div class="col-sm-6 form-control-static">
                                @Model.UpdateTime
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-4 control-label">回访备注:</label>
                            <div class="col-sm-6 form-control-static">
                                @Model.Remark
                            </div>
                        </div>           
                    </div>
                    
                     

                    <div class="form-group text-center">
                        <div class="col-sm-12">
                            <button type="button" class="btn btn-w-m btn-primary ladda-button" onclick="$.closeWindow();" data-style="expand-right">关闭</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>



@section Scripts {
    @Scripts.Render("~/plugins/validate")
    @Scripts.Render("~/Areas/Admin/Scripts/module/edit.js")
}




