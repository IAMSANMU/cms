@model  imow.AdminEtl.Areas.Admin.Models.Admin.ClassModel
@{
    Layout = "~/Views/Shared/_Main.cshtml";
    ViewBag.Tabs = new string[] { "未回访_list", "已回访_recover" };
}

@section searchBar
{
    <form role="form" class="form-inline">
        <div class="form-group">
            <input type="hidden" name="Status" value="@(ViewBag.tab.ToString()=="list"?0:1)" placeholder="" class="form-control" searchcolum="Status" searchoperator="1" startSearch="true">
            <input type="text" name="Name" value="" placeholder="名称" class="form-control" searchcolum="Name" searchoperator="6">
        </div>
        <div class="form-group">
            <input type="text" name="Tel" value="" placeholder="联系电话" class="form-control" searchcolum="Tel" searchoperator="6">
        </div>
        <div class="form-group">
            <label class="">创建时间：</label>
            <input type="text" name="CreateTime" data-provide="datepicker" class="form-control" searchcolum="CreateTime" searchoperator="3">
        </div>
        <div class="form-group">
            <input type="text" name="EndTime" data-provide="datepicker" class="form-control" searchcolum="EndTime" searchoperator="5">
        </div>
        <div class="form-group">
            <button type="button" class="btn btn-w-m btn-primary ladda-button" id="search" data-style="expand-right"><span class="ladda-label">搜索</span><span class="ladda-spinner"></span></button>
        </div>
</form>

}

@section toolbar{
    <div class="ibox-content" id="tbBars"></div>
}

@section table{
    <table class="table table-striped table-bordered table-hover" id="tbList">
        <thead>
            <tr>
                <th><input type="checkbox" class="i-checks checkAll" data-table="tbList" /></th>
                <th>操作</th>
                <th>预约人</th>
                <th>预约电话</th>
                <th>预约校区</th>
                <th>预约课程</th>
                <th>预约时间</th>
            </tr>
        </thead>
    </table>
}
@section Styles {
    @Styles.Render("~/plugins/datepickerStyles")

}


@section Scripts {
    @Scripts.Render("~/plugins/datepicker")
    @Scripts.Render("~/Areas/Admin/Scripts/order/index.js")
}