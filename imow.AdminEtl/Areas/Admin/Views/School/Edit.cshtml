@model imow.Model.EntityModel.Admin.SchoolEntity
@{
    Layout = "~/Views/Shared/_EmptyLayout.cshtml";
}
<div class="wrapper wrapper-content animated fadeInRight ecommerce">
    <div class="row">
        <form role="form" id="saveForm" class="form-horizontal" method="post" action="@Url.Action("Modify","School")">

            <div class="col-sm-12">
                <div class="tabs-container">
                    <ul class="nav nav-tabs">
                        <li class="active"><a data-toggle="tab" href="#tab-1"> 基本资料</a></li>
                        <li class=""><a data-toggle="tab" href="#tab-2" id="changeClass">校区介绍</a></li>
                    </ul>
                    <div class="tab-content">
                        <div id="tab-1" class="tab-pane active">
                            <div class="panel-body">
                                <input type="hidden" name="Id" value="@Model.Id" />
                                <fieldset class="form-horizontal">
                                    <div class="form-group">
                                        <label class="col-sm-2 control-label">校区名称:</label>
                                        <div class="col-sm-8">
                                            <input type="text" name="Name" class="form-control" value="@Model.Name" />
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-sm-2 control-label">联系电话:</label>
                                        <div class="col-sm-8">
                                            <input type="text" name="Tel" value="@Model.Tel" class="form-control" />
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-sm-2 control-label">校址</label>
                                        <div class="col-sm-8 " id="areaDiv">
                                            <div class="row clearfix">
                                                <div class="col-sm-3">
                                                    <input type="hidden" name="Province" id="province" value="@Model.Province" />
                                                    <input type="hidden" name="City" id="city" value="@Model.City" />
                                                    <input type="hidden" name="Area" id="area" value="@Model.Area" />
                                                    <input type="hidden" name="Street" id="street" value="@Model.Street" />
                                                    <select name="ProvinceId" id="provinceId" data-valId="@Model.ProvinceId" class="col-sm-3 form-control"></select>
                                                </div>
                                                <div class="col-sm-3">
                                                    <select name="CityId" id="cityId" data-valId="@Model.CityId" class="col-sm-3 form-control"></select>
                                                </div>
                                                <div class="col-sm-3">
                                                    <select name="AreaId" id="areaId" data-valId="@Model.AreaId" class="col-sm-3 form-control"></select>
                                                </div>
                                                <div class="col-sm-3">
                                                    <select name="StreetId" id="streetId" data-valId="@Model.StreetId" class="col-sm-3 form-control"></select>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-sm-2 control-label">详细地址</label>
                                        <div class="col-sm-8">
                                            <input type="text" class="form-control " name="Addr" value="@Model.Addr" />
                                        </div>
                                    </div>
                                </fieldset>
                            </div>
                        </div>
                        <div id="tab-2" class="tab-pane ">
                            <div class="panel-body">
                                <div class="row">
                                    <div class="col-sm-12">
                                        <textarea name="DecodeInfo" id="info" class="form-control summernote">@Model.DecodeInfo</textarea>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="ibox">
                    <div class="ibox-content text-center">
                        <button type="button" class="btn btn-w-m btn-primary ladda-button" id="btnSave" data-style="expand-right">保存</button>
                    </div>
                </div>
            </div>


        </form>

    </div>
</div>


@section Styles {
    @Styles.Render("~/plugins/summernoteStyles")

}


@section Scripts {
    @Scripts.Render("~/Scripts/app/areaTools.js")
    @Scripts.Render("~/plugins/validate")
    @Scripts.Render("~/plugins/summernote")
    @Scripts.Render("~/Areas/Admin/Scripts/school/edit.js")
}