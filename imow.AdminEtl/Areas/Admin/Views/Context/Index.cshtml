@{
    Layout = "~/Views/Shared/_Main.cshtml";
    ViewBag.Tabs = new string[] { "文章列表_list", "回收站_recover" };
}

@section searchBar
{
    <form role="form" class="form-inline">
        <div class="form-group">
            <input type="text" name="Name" value="" placeholder="名称" class="form-control" searchcolum="Name" searchoperator="6">
            <input type="hidden" name="IsDel" value="@(ViewBag.tab.ToString()=="list"?0:1)" placeholder="" class="form-control" searchcolum="IsDel" searchoperator="1" startSearch="true">
        </div>
        <div class="form-group">
            <label class="control-label">显示状态</label>
            <select searchcolum="IsShow" searchoperator="1" class="form-control">
                <option value="">全部</option>
                <option value="true">显示</option>
                <option value="false">隐藏</option>
            </select>
        </div>
        <div class="form-group">
            <label class="control-label">审核状态</label>
            <select searchcolum="Status" searchoperator="1" class="form-control">
                <option value="">全部</option>
                <option value="1">草稿</option>
                <option value="2">审核通过</option>
                <option value="3">审核不通过</option>
            </select>
        </div>

        <div class="form-group">
            <button type="button" class="btn btn-w-m btn-primary ladda-button" id="search" data-style="expand-right"><span class="ladda-label">搜索</span><span class="ladda-spinner"></span></button>
        </div>
    </form>

}

@section toolbar{
    <div class="ibox-content" id="tbBars"></div>
}

@section table{
    <table class="table table-striped table-bordered table-hover" id="tbList">
        <thead>
            <tr>
                <th><input type="checkbox" class="i-checks checkAll" data-table="tbList" /></th>
                <th>操作</th>
                <th>栏目</th>
                <th>标题</th>
                <th>显示状态</th>
                <th>审核状态</th>
                <th>置顶</th>
                <th>发布时间</th>
                <th>发布人</th>
            </tr>
        </thead>
    </table>
}
@section Scripts{

    @Scripts.Render("~/Areas/Admin/Scripts/context/index.js")
}