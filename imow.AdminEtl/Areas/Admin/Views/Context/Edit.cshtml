@model imow.Model.EntityModel.Admin.SectionEntity
@{
    Layout = "~/Views/Shared/_EmptyLayout.cshtml";
}
<div class="wrapper wrapper-content animated fadeInRight ecommerce">
    <div class="row">

        <div class="col-sm-12 ibox">
            <div class="ibox-content">
                <form role="form" id="saveForm" class="form-horizontal" method="post" action="@Url.Action("Modify", "Section")">
                    <div class="form-group">
                        <input type="hidden" name="Id" value="@Model.Id" />
                        <label class="col-sm-2 control-label">栏目名称:</label>
                        <div class="col-sm-8">
                            <input type="text" name="Name" value="@Model.Name" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">排序:</label>
                        <div class="col-sm-8">
                            <input type="text" name="OrderNum" value="@Model.OrderNum" class="form-control" />
                        </div>
                    </div>
                    
                    <div class="form-group">
                        <label class="col-sm-2 control-label">说明:</label>
                        <div class="col-sm-8">
                            <textarea name="Remark" class="form-control">@Model.Remark</textarea>
                        </div>
                    </div>
                    <div class="form-group text-center">
                        <div class="col-sm-12">
                            <button type="button" class="btn btn-w-m btn-primary ladda-button" id="btnSave" data-style="expand-right">保存</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


@section Styles {

}


@section Scripts {
    @Scripts.Render("~/plugins/validate")
    @Scripts.Render("~/Areas/Admin/Scripts/section/edit.js")
}