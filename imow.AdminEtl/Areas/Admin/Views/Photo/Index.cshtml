@model imow.AdminEtl.Areas.Admin.Models.Admin.PhotoModel
@{
    Layout = "~/Views/Shared/_Main.cshtml";
    ViewBag.Tabs = new string[] { "相册列表_list", "回收站_recover" };
}

@section searchBar
{

}

@section toolbar{
<div class="ibox-content" id="tbBars"></div>
}

@section table{

    @foreach (var item in Model.PhotoList)
    {
        <div class="col-sm-6 col-md-3">
            <div class="thumbnail">
                <img src="@item.Img" class="thumb"
                     alt="@item.Name">
                <div class="caption">
                    <h3>@item.Name (ID:@item.Id)</h3>
                    <p>@item.Info</p>
                    <p>
                        <a href="@Url.Action("ImgList","Photo",new {pid=item.Id})" class="btn btn-primary" role="button">
                            查看
                        </a>
                        <button class="btn btnEdit btn-primary" data-id="@item.Id">
                            编辑
                        </button>
                        @if (ViewBag.Tab.ToString() == "list")
                        {
                            <button class="btn btn-danger btnDelete" data-id="@item.Id">
                                删除
                            </button>
                        }
                        else
                        {
                            <button class="btn btn-danger btn-restore" data-id="@item.Id">
                                删除
                            </button>
                        }
                    </p>
                </div>
            </div>
        </div>
    }
}
@section Scripts{

    @Scripts.Render("~/Areas/Admin/Scripts/photo/index.js")
}