@model imow.AdminEtl.Areas.Admin.Models.Admin.PhotoModel
@{
    Layout = "~/Views/Shared/_EmptyLayout.cshtml";
}
<div class="wrapper wrapper-content animated fadeInRight ecommerce">
    <div class="row">
        <div class="col-sm-12 ibox">
            <div class="ibox-content">
                <form role="form" id="saveForm" class="form-horizontal" method="post" action="@Url.Action("EditImg","Photo")">
                    <div class="form-group">
                        <label class="col-sm-4 control-label">名称:</label>
                        <div class="col-sm-6">
                            <input type="hidden" name="Id" value="@Model.PhotoImgEntity.Id" >
                            <input type="hidden" name="PhotoId" value="@Model.PhotoImgEntity.PhotoId" >
                            <input type="text" name="Name" value="@Model.PhotoImgEntity.Name" class="form-control"/>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4 control-label">描述:</label>
                        <div class="col-sm-6">
                            <textarea class="form-control" name="Info" rows="3">@Model.PhotoImgEntity.Info</textarea>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4 control-label">图片</label>
                        <div class="col-sm-6">
                            <a href="@Model.PhotoImgEntity.Url" target="_blank"><img src="@Model.PhotoImgEntity.Url" class="headPhoto" /> </a> 
                        </div>
                    </div>

                    <div class="form-group text-center">
                        <div class="col-sm-12">
                            <button type="button" class="btn btn-w-m btn-primary ladda-button" id="btnSave" data-style="expand-right">保存</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Styles {

}


@section Scripts {
   @Scripts.Render("~/Areas/Admin/Scripts/photo/imgEdit.js")
}

