@model imow.AdminEtl.Areas.Admin.Models.Admin.PhotoModel
@{
    Layout = "~/Views/Shared/_EmptyLayout.cshtml";
}
<div class="wrapper wrapper-content animated fadeInRight ecommerce">
    <div class="row">
        <div class="col-sm-12 ibox">
            <div class="ibox-content">
                <form role="form" id="saveForm" class="form-horizontal" method="post" action="@Url.Action("Modify","Photo")">
                    <div class="form-group">
                        <label class="col-sm-4 control-label">名称:</label>
                        <div class="col-sm-6">
                            <input type="hidden"  name="Id" value="@Model.PhotoEntity.Id" />
                            <input type="text" name="Name" value="@Model.PhotoEntity.Name" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4 control-label">描述:</label>
                        <div class="col-sm-6">
                            <textarea class="form-control" name="Info" rows="3">@Model.PhotoEntity.Info</textarea>
                        </div>
                    </div>
                    <div class="form-group text-center">
                        <div class="col-sm-12">
                            <button type="button" class="btn btn-w-m btn-primary ladda-button" id="btnSave" data-style="expand-right">保存</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/plugins/validate")
    @Scripts.Render("~/Areas/Admin/Scripts/photo/edit.js")
}
@section Styles{
}


