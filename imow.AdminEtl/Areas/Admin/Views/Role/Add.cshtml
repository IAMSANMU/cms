@{
    Layout = "~/Views/Shared/_EmptyLayout.cshtml";
}

<div class="wrapper wrapper-content animated fadeInRight ecommerce">
    <div class="row">
        <div class="col-sm-12 ibox">
            <div class="ibox-content">
                <form role="form" id="saveForm" class="form-horizontal" method="post" action="@Url.Action("Add","Role")">
                    <div class="form-group">
                        <label class="col-sm-4 control-label">名称:</label>
                        <div class="col-sm-6">
                            <input type="text" name="Name" value="" class="form-control" />
                            <!-- 占位 -->
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4 control-label">备注:</label>
                        <div class="col-sm-6">
                            <textarea class="form-control" name="Remark" rows="3"></textarea>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4 control-label">权限:</label>
                        <div class="col-sm-6">
                            
                            <div class="ibox-content">
                                <div id="jstree">
                                    <!--循环树形-->
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group text-center">
                        <div class="col-sm-12">
                            <button type="button" class="btn btn-w-m btn-primary ladda-button" id="btnSave" data-style="expand-right">保存</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/plugins/validate")
    @Scripts.Render("~/plugins/jsTree")
    @Scripts.Render("~/Areas/Admin/Scripts/role/edit.js")
}
@section Styles{
    @Styles.Render("~/Content/plugins/jsTree")
}




