@model imow.AdminEtl.Areas.Admin.Models.Admin.AdminUserModel
@{
    Layout = "~/Views/Shared/_EmptyLayout.cshtml";
}


<div class="wrapper wrapper-content animated fadeInRight ecommerce">
    <div class="row">
        <div class="col-sm-12 ibox">
            <div class="ibox-content text-center">
                <form role="form" id="saveForm" class="form-horizontal" method="post" action="@Url.Action("SelfPwd","Admin")">
                    <div class="form-group">
                        <label class="col-sm-4 control-label">原始密码:</label>
                        <div class="col-sm-6">
                            <input type="password" name="OldPwd" value="" class="form-control"/>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4 control-label">密码:</label>
                        <div class="col-sm-6">
                            <input type="password" name="Pwd" id="Pwd" value="" class="form-control"/>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4 control-label">确认密码:</label>
                        <div class="col-sm-6">
                            <input type="password" name="PwdSure" value="" class="form-control"/>
                        </div>
                    </div>
                    <div class="form-group text-center">
                        <div class="col-sm-12">
                            <button type="button" class="btn btn-w-m btn-primary ladda-button" id="btnSave" data-style="expand-right">保存</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>



@section Scripts {
    @Scripts.Render("~/plugins/validate")
    @Scripts.Render("~/Areas/Admin/Scripts/user/editPwd.js")
}
