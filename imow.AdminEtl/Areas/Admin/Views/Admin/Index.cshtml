@{
    Layout = "~/Views/Shared/_Main.cshtml";
    ViewBag.Tabs = new string[] { "操作员列表_list", "回收站_recover" };
}
@section searchBar{
   
    <form role="form"  class="form-inline">
        <div class="form-group">
            <input type="text" name="userName" value="" placeholder="登录账号" class="form-control" searchcolum="UserName" searchoperator="6">
            <input type="hidden" name="IsDel" value="@(ViewBag.tab.ToString()=="list"?0:1)" placeholder="" class="form-control" searchcolum="IsDel" searchoperator="1" startSearch="true">
        </div>
        <div class="form-group">
            <input type="text" name="price" value="" placeholder="真实姓名" class="form-control" searchcolum="RealName" searchoperator="6">
        </div>
        <div class="form-group">
            <button type="button" class="btn btn-w-m btn-primary ladda-button" id="search" data-style="expand-right"><span class="ladda-label">搜索</span><span class="ladda-spinner"></span></button>
        </div>
    </form>
}

@section toolbar{
    <div class="ibox-content" id="tbBars"></div>
}


@section table{
    <table class="table table-striped table-bordered table-hover" id="tbList">
        <thead>
        <tr>
            <th><input type="checkbox" class="i-checks checkAll" data-table="tbList"/></th>
            <th >操作</th>
            <th >登录帐号</th>
            <th >真实姓名</th>
            <th >最后登录时间</th>
            <th >性别</th>
            <th >手机号码</th>
            <th >邮箱</th>
            <th>QQ</th>
            <th >禁用</th>
            <th >最后更新时间</th>
        </tr>
        </thead>
    </table>
}

@section Scripts{
    @Scripts.Render("~/Areas/Admin/Scripts/user/index.js")
}

